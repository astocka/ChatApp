@model ChatApp.Models.ChannelModel

@Html.Partial("_Navbar")
<main role="main" class="container">
    <div class="row">
        <div class="col-sm-10 my-md-3 py-5">
            <div class="pt-3 pt-md-5 text-center my-3 p-3">
                <h2 class="display-4">Delete the channel</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <div class="text-center">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Color)
                            </th>
                            <th colspan="3">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-light">
                            <td>
                                @Html.DisplayFor(model => model.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Color)
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <form asp-action="DeleteChannel">
                                        <input type="hidden" asp-for="ID" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                    <a asp-action="ManageChannels" class="btn btn-outline-dark">Back to Channels</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
@Html.Partial("_Footer")