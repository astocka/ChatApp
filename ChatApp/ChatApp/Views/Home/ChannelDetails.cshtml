@using Microsoft.AspNetCore.Identity
@model ChatApp.Models.ChannelModel

@Html.Partial("_Navbar")
<main role="main" class="container" style="background-color: @Model.Color">
    <div class="row mt-lg-5 pt-lg-5">
        <div class="col-lg-12">
            <div class="mt-2 pt-2 text-center">
                <div class="my-3 p-3 bg-light">
                    <div class="py-3">
                        <h2 class="display-4" id="modelName">@Model.Name Channel</h2>
                    </div>
                    <div class="btn-group" role="group">
                        <a asp-action="CreateMessage" asp-route-id="@Model.ID" class="btn btn-dark btn-lg">Add message</a>
                        <a asp-action="ManageChannels" class="btn btn-outline-dark btn-lg">Back to Channels</a>
                    </div>
                    <hr class="my-4">
                    <div class="text-left">
                        <div class="col-lg-6">
                            <h1 class="font-weight-bold" style="color: @Model.Color">Messages</h1>
                            <table class="table table-borderless table-sm messages">
                                @foreach (var message in Model.Messages)
                                {
                                    <tr>
                                        <td colspan="2" class="list-group font-weight-bold userInfo" data-user="@message.User" data-created="@message.Created">@message.User [ @message.Created ] </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @message.Message
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="EditMessage" asp-route-id="@message.ID" class="btn btn-outline-warning">Edit</a>
                                                <a asp-action="DeleteMessage" asp-route-id="@message.ID" class="btn btn-outline-danger messageDelete">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@Html.Partial("_Footer")
