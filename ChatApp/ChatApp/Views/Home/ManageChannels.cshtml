@model IEnumerable<ChatApp.Models.ChannelModel>

@section btnOptions {

    <script type="text/javascript">

        $(document).ready(function () {
            $("#channelEdit").hide();
            $("#channelDelete").hide();
        });

    </script>
}

@Html.Partial("_Navbar")
<main role="main" class="container">
    <div class="row">
        <div class="col-sm-10 my-5 py-5">
            <div class="pt-3 pt-md-5 text-center my-3 p-3">
                <h2 class="display-4">Manage Channels</h2>
            </div>
            <hr class="my-4" />
            <div class="text-center">
                <table class="table table-hover table-sm">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Color)
                            </th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="bg-light">
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Color)
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditChannel" asp-route-id="@item.ID" id="channelEdit" class="btn btn-outline-warning">Edit</a>
                                        <a asp-action="ChannelDetails" asp-route-id="@item.ID" class="btn btn-outline-info">Details</a>
                                        <a asp-action="DeleteChannel" asp-route-id="@item.ID" id="channelDelete" class="btn btn-outline-danger deleteChannel">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
@Html.Partial("_Footer")