@model ChatApp.Models.ChannelModel

@Html.Partial("_Navbar")
<main role="main" class="container">
    <div class="row my-lg-5">
        <div class="col-3">
        </div>
        <div class="col-6 my-5 py-5">
            <form class="form-signin" asp-action="CreateChannel">
                <div class="text-center">
                    <h2 class="h3 mb-3 display-4">Create a channel</h2>
                </div>
                <hr class="my-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control channel-name" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control channel-color" placeholder="Color" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                    <input asp-for="UserChannel.ChannelID" type="hidden" />
                    <input asp-for="UserChannel.UserID" type="hidden" />
                </div>
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-success" id="create-channel">Create</button>
                    <a asp-action="ManageChannels" class="btn btn-dark">Back to Channels</a>
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</main>
@Html.Partial("_Footer")
